{
  "kind": "collectionType",
  "collectionName": "tracks",
  "info": {
    "singularName": "track",
    "pluralName": "tracks",
    "displayName": "Track"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "bpm": {
      "type": "integer",
      "required": true
    },
    "key": {
      "type": "string",
      "default": "C3",
      "required": true
    },
    "genres": {
      "type": "json",
      "required": true
    },
    "audioFile": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "files",
        "audios"
      ]
    },
    "samples": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "files",
        "audios"
      ]
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "trackStatus": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "pending",
        "approved",
        "rejected"
      ]
    },
    "username": {
      "type": "string"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "tracks"
    }
  }
}
