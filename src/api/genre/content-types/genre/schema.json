{
  "kind": "collectionType",
  "collectionName": "genres",
  "info": {
    "singularName": "genre",
    "pluralName": "genres",
    "displayName": "Genre",
    "description": "Music genres and categories"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "tracks": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::track.track",
      "mappedBy": "genres"
    }
  }
}